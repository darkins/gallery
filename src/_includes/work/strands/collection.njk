<div class="gallery">
    <ul class="grid-thumb">
        {% for image in work.strands %}
            <li class="img-thumb">
                <a href="/{{ image.title | slug }}" aria-label="Gallery image {{ image.title }}">
                    {% respimg 
                    src=image.src,
                    alt=image.alt,
                    inputDir="./src",
                    imgDir=image.imgDir,
                    widths=[320, 480, 640, 1024],
                    sizes="(min-width: 600px) 50vw, (min-width: 800px) 100vw, 33.3vw",
                    className="grid-image",
                    width=640,
                    height=400 %}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>