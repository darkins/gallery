---
pagination:
    data: strands
    size: 1
    alias: image
    addAllPagesToCollections: true
layout: base.njk
permalink: "/{{ image.title | slug }}/"
---

<a href="#main" class="skip-link">Skip to main content</a>
<main id="main" class="main-container">
    <div class="featured-img">
        <div class="image-container">
            {% respimg 
                        src=image.src,
                        alt=image.alt,
                        inputDir="./src",
                        imgDir=image.imgDir,
                        widths=[320, 480, 640, 1024],
                        sizes="(max-width: 480px) 33.3vw, (min-width: 640px) 50vw, (min-width: 1000px) 100vw, 33.3vw",
                        className="showcase-img",
                        width=1024,
                        height=768 %}
            <div class="prev-next">
                <div>
                    {% if pagination.href.previous %}
                        <a class="prev" href="{{ pagination.href.previous }}">
                            <span class="lt">&lt;</span>
                            Prev</a>
                    {% endif %}
                </div>
                <div class="image-description">
                    <h1 class="h2">{{ image.title }}</h1>
                    <p>{{ image.credit }}</p>
                </div>
                <div>
                    {% if pagination.href.next %}
                        {% if not pagination.href.previous %}
                            <a class="next" style="margin-left: auto; margin-right: 0;" href="{{ pagination.href.next }}">Next
                                <span class="gt">&gt;</span>
                            </a>
                        {% else %}
                            <a class="next" href="{{ pagination.href.next }}">Next
                                <span class="gt">&gt;</span>
                            </a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</main>