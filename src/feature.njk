---
pagination:
    data: works
    size: 1
    alias: image
    addAllPagesToCollections: true
layout: base.njk
permalink: "/work/{{ image.group }}/{{ image.title | slug }}/"
---

{% set prev = pagination.href.previous %}
{% set next = pagination.href.next %}

<a href="#main" class="skip-link">Skip to main content</a>
<main id="main">
    <div class="featured-img">
        <div class="image-container">
            {% respimg 
                src=image.src,
                alt=image.alt,
                inputDir="./src",
                imgDir=image.imgDir,
                widths=[320, 480, 640, 1024],
                sizes="(max-width: 480px) 33.3vw, (min-width: 640px) 50vw, (min-width: 1000px) 100vw, 33.3vw",
                className="showcase-img",
                width=1024,
                height=768 %}
            <div class="prev-next">
                <div>
                    {% if prev and image.group in prev %}
                        <a class="prev" href="{{ prev }}">
                            <span class="lt">&lt;</span>
                        </a>
                    {% endif %}
                </div>
                <div class="image-description">
                    <h2>{{ image.title }}</h2>
                    <p>{{ image.credit }}</p>
                </div>
                <div>
                    {% if next and image.group in next %}
                        {% if not prev %}
                            <a class="next" style="margin-left: auto; margin-right: 0;" href="{{ next }}">
                                <span class="gt">&gt;</span>
                            </a>
                        {% else %}
                            <a class="next" href="{{ next }}">
                                <span class="gt">&gt;</span>
                            </a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</main>